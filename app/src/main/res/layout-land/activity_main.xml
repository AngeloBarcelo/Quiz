<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="main_activity"
            class="MainActivity"
            type="com.abcodelab.project_four.MainActivity"></variable>

        <variable
            name="scoring_activity"
            class="ScoreActivity"
            type="com.abcodelab.project_four.ScoreActivity"></variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="310dp"
                android:layout_height="207dp"
                android:src="@drawable/logo" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:id="@+id/scoring"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_margin="@dimen/card_margin"
                android:onClick="scoreDisplay"
                android:textAlignment="center"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="@dimen/corner_size"
                app:cardElevation="@dimen/card_elevation">

                <TextView
                    android:id="@+id/text_title_scoring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:onClick="scoreDisplay"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="@dimen/text_question_size"
                    app:fontFamily="@font/fredoka_one" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/title_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"
                    android:onClick="questioBtnPressed"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardCornerRadius="@dimen/corner_size"
                    app:cardElevation="@dimen/card_elevation">

                    <TextView
                        android:id="@+id/text_title_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/text_question_size"
                        app:fontFamily="@font/fredoka_one" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/title_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"
                    android:onClick="questioBtnPressed"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardCornerRadius="@dimen/corner_size"
                    app:cardElevation="@dimen/card_elevation">

                    <TextView
                        android:id="@+id/text_title_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/text_question_size"
                        app:fontFamily="@font/fredoka_one" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/title_btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"
                    android:onClick="questioBtnPressed"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardCornerRadius="@dimen/corner_size"
                    app:cardElevation="@dimen/card_elevation">

                    <TextView
                        android:id="@+id/text_title_btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/text_question_size"
                        app:fontFamily="@font/fredoka_one" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/title_btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"
                    android:onClick="questioBtnPressed"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardCornerRadius="@dimen/corner_size"
                    app:cardElevation="@dimen/card_elevation">

                    <TextView
                        android:id="@+id/text_title_btn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/text_question_size"
                        app:fontFamily="@font/fredoka_one" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/title_btn5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"
                    android:onClick="questioBtnPressed"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardCornerRadius="@dimen/corner_size"
                    app:cardElevation="@dimen/card_elevation">

                    <TextView
                        android:id="@+id/text_title_btn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/text_question_size"
                        app:fontFamily="@font/fredoka_one" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/title_btn6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"
                    android:onClick="questioBtnPressed"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardCornerRadius="@dimen/corner_size"
                    app:cardElevation="@dimen/card_elevation">

                    <TextView
                        android:id="@+id/text_title_btn6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="questioBtnPressed"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/text_question_size"
                        app:fontFamily="@font/fredoka_one" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>